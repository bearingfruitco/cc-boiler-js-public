{
  "version": "1.0.0",
  "project": {
    "name": "FreshSlate Boilerplate",
    "type": "boilerplate-system",
    "description": "AI-powered development boilerplate with strict design system"
  },
  "commands": {
    "path": ".claude/commands",
    "aliases": ".claude/aliases.json",
    "chains": ".claude/chains.json"
  },
  "context": {
    "autoCapture": true,
    "captureInterval": 300000,
    "storage": ".claude/context",
    "maxAge": 86400000
  },
  "analytics": {
    "enabled": true,
    "storage": ".claude/analytics",
    "retention": 30
  },
  "designSystem": {
    "enforce": true,
    "rules": {
      "typography": {
        "sizes": ["text-size-1", "text-size-2", "text-size-3", "text-size-4"],
        "weights": ["font-regular", "font-semibold"]
      },
      "spacing": {
        "grid": 4,
        "allowed": [1, 2, 3, 4, 6, 8, 12, 16]
      },
      "colors": {
        "distribution": {
          "neutral": 60,
          "primary": 30,
          "accent": 10
        }
      },
      "mobile": {
        "minTouchTarget": 44,
        "minTextSize": 16
      }
    }
  },
  "templates": {
    "path": ".claude/templates",
    "available": [
      "saas-dashboard",
      "marketing-site",
      "e-commerce",
      "internal-tool"
    ]
  },
  "git": {
    "hooks": {
      "preCommit": [
        "validate-design",
        "security-check secrets"
      ],
      "prePush": [
        "test-runner changed",
        "performance-monitor check"
      ]
    }
  },
  "integrations": {
    "github": {
      "enabled": true,
      "features": ["issues", "gists", "actions"]
    },
    "supabase": {
      "enabled": true
    },
    "vercel": {
      "enabled": false
    }
  }
}