{
  "version": "1.0.0",
  "project": {
    "name": "FreshSlate Boilerplate",
    "type": "boilerplate-system",
    "description": "AI-powered development boilerplate with strict design system"
  },
  "commands": {
    "path": ".claude/commands",
    "aliases": ".claude/aliases.json",
    "chains": ".claude/chains.json"
  },
  "context": {
    "autoCapture": true,
    "captureInterval": 300000,
    "storage": ".claude/context",
    "maxAge": 86400000
  },
  "analytics": {
    "enabled": true,
    "storage": ".claude/analytics",
    "retention": 30
  },
  "designSystem": {
    "enforce": true,
    "rules": {
      "typography": {
        "sizes": ["text-size-1", "text-size-2", "text-size-3", "text-size-4"],
        "weights": ["font-regular", "font-semibold"]
      },
      "spacing": {
        "grid": 4,
        "allowed": [1, 2, 3, 4, 6, 8, 12, 16]
      },
      "colors": {
        "distribution": {
          "neutral": 60,
          "primary": 30,
          "accent": 10
        }
      },
      "mobile": {
        "minTouchTarget": 44,
        "minTextSize": 16
      }
    }
  },
  "templates": {
    "path": ".claude/templates",
    "available": [
      "saas-dashboard",
      "marketing-site",
      "e-commerce",
      "internal-tool"
    ]
  },
  "git": {
    "hooks": {
      "preCommit": [
        "validate-design",
        "security-check secrets"
      ],
      "prePush": [
        "test-runner changed",
        "performance-monitor check"
      ]
    }
  },
  "integrations": {
    "github": {
      "enabled": true,
      "features": ["issues", "gists", "actions"]
    },
    "supabase": {
      "enabled": true
    },
    "vercel": {
      "enabled": false
    }
  },
  "grove_enhancements": {
    "prd_linter": {
      "enabled": true,
      "blocking": false,
      "custom_terms": ["blazing", "world-class", "game-changing", "revolutionary"],
      "severity_levels": {
        "requirements": "warning",
        "other_sections": "info"
      }
    },
    "pattern_library": {
      "enabled": true,
      "auto_suggest": true,
      "min_success_rate": 0.8,
      "auto_extract": true,
      "extraction_triggers": ["test_complete", "feature_complete"]
    },
    "test_generation": {
      "enabled": true,
      "frameworks": {
        "unit": "vitest",
        "integration": "vitest",
        "e2e": "playwright"
      },
      "coverage_target": 0.85,
      "include_edge_cases": true,
      "include_error_cases": true,
      "auto_generate_on_prd": false
    },
    "implementation_grading": {
      "enabled": true,
      "min_grade": 0.85,
      "block_pr": false,
      "weights": {
        "functional": 0.4,
        "testing": 0.25,
        "design": 0.15,
        "performance": 0.1,
        "security": 0.1
      },
      "grade_on": ["complete", "checkpoint"],
      "export_reports": true,
      "track_history": true
    }
  }
}