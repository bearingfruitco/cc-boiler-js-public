{
  "name": "claude-code-boilerplate",
  "version": "2.5.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:unit": "vitest --run",
    "test:coverage": "vitest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "bun run ./scripts/migrate.ts",
    "db:seed": "bun run ./scripts/seed.ts",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset",
    "analyze": "ANALYZE=true bun run build",
    "analyze:server": "BUNDLE_ANALYZE=server bun run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser bun run build",
    "check:env": "bun run ./scripts/check-env.ts",
    "check:health": "bun run ./scripts/health-check.ts",
    "check:types": "bun run typecheck",
    "check:all": "bun run lint && bun run typecheck && bun run test",
    "clean": "rm -rf .next dist node_modules .turbo",
    "clean:cache": "rm -rf .next .turbo",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "pre-commit": "bun run lint:fix && bun run typecheck",
    "fix:deps": "./fix-dependencies.sh",
    "fix:extensions": "./fix-ts-extensions.sh",
    "check:deps": "./check-dependencies.sh",
    "typecheck:fix": "tsc --noEmit --skipLibCheck",
    "typecheck:dev": "tsc --project tsconfig.development.json"
  },
  "dependencies": {
    "@date-fns/tz": "^1.0.0",
    "@hookform/resolvers": "3.10.0",
    "@radix-ui/react-checkbox": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.0",
    "@radix-ui/react-select": "^2.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.0",
    "@rudderstack/analytics-js": "^3.21.0",
    "@sentry/nextjs": "^9.38.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.48.0",
    "@tanstack/react-query": "^5.65.0",
    "@upstash/redis": "^1.35.1",
    "@vercel/analytics": "^1.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.0.0",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.0",
    "drizzle-zod": "0.5.1",
    "framer-motion": "^12.23.3",
    "immer": "^10.1.1",
    "isomorphic-dompurify": "^2.26.0",
    "jose": "^6.0.11",
    "lucide-react": "^0.525.0",
    "next": "^15.3.5",
    "next-auth": "^5.0.0-beta.25",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "sharp": "^0.34.3",
    "swr": "^2.3.4",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.0.0",
    "zod": "3.25.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.50.0",
    "@prisma/client": "^6.11.1",
    "@tailwindcss/vite": "^4.1.0",
    "@tanstack/react-query-devtools": "^5.65.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.0",
    "@types/bun": "^1.2.0",
    "@types/node": "^24.0.13",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "glob": "^10.4.5",
    "husky": "^9.1.7",
    "msw": "^2.7.0",
    "prettier": "^3.6.2",
    "prisma": "^6.11.1",
    "recursive-copy": "^2.0.14",
    "tailwindcss": "^4.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.2.18"
  },
  "packageManager": "pnpm@10.13.1",
  "pnpm": {
    "overrides": {
      "zod": "3.25.1",
      "drizzle-zod": "0.5.1",
      "@hookform/resolvers": "3.10.0",
      "glob": "^10.3.0",
      "rimraf": "^5.0.0"
    },
    "onlyBuiltDependencies": [
      "msw",
      "@prisma/client",
      "@prisma/engines",
      "@sentry/cli",
      "@tailwindcss/oxide",
      "esbuild",
      "prisma",
      "sharp"
    ]
  }
}
