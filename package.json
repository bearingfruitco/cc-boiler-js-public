{
  "name": "freshslate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:e2e": "playwright test",
    "test:unit": "bun test --preload ./test-setup.ts",
    "test:coverage": "bun test --coverage",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "bun run ./scripts/migrate.ts",
    "db:seed": "bun run ./scripts/seed.ts",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset",
    "analyze": "ANALYZE=true bun run build",
    "analyze:server": "BUNDLE_ANALYZE=server bun run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser bun run build",
    "check:env": "bun run ./scripts/check-env.ts",
    "check:health": "bun run ./scripts/health-check.ts",
    "check:types": "bun run typecheck",
    "check:all": "bun run lint && bun run typecheck && bun run test",
    "clean": "rm -rf .next dist node_modules .turbo",
    "clean:cache": "rm -rf .next .turbo",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "pre-commit": "bun run lint:fix && bun run typecheck"
  },
  "dependencies": {
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@supabase/supabase-js": "^2.48.0",
    "@supabase/ssr": "^0.5.0",
    "@tanstack/react-query": "^5.65.0",
    "@tanstack/react-query-devtools": "^5.65.0",
    "@upstash/redis": "^1.36.0",
    "drizzle-orm": "^0.44.0",
    "drizzle-zod": "^0.5.0",
    "framer-motion": "^11.16.0",
    "lucide-react": "^0.469.0",
    "react-hook-form": "^7.55.0",
    "@hookform/resolvers": "^3.10.0",
    "rudder-sdk-js": "^2.48.0",
    "sharp": "^0.33.0",
    "zod": "^3.24.0",
    "swr": "^2.3.0",
    "zustand": "^5.0.0",
    "immer": "^10.1.0",
    "isomorphic-dompurify": "^2.19.0",
    "@sentry/nextjs": "^8.45.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.7.0",
    "postgres": "^3.5.0",
    "@vercel/analytics": "^1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@playwright/test": "^1.50.0",
    "@prisma/client": "^6.11.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.0",
    "@types/bun": "^1.2.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "drizzle-kit": "^0.32.0",
    "prisma": "^6.11.0",
    "tailwindcss": "^4.1.0",
    "@tailwindcss/vite": "^4.1.0",
    "typescript": "^5.8.3",
    "vitest": "^2.2.0",
    "husky": "^9.2.0",
    "prettier": "^3.4.0",
    "webpack-bundle-analyzer": "^4.11.0",
    "dotenv": "^16.5.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
