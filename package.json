{
  "name": "freshslate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:e2e": "playwright test",
    "test:unit": "bun test --preload ./test-setup.ts",
    "test:coverage": "bun test --coverage",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "bunx drizzle-kit push:pg",
    "db:drop": "bunx drizzle-kit drop",
    "db:check": "bunx drizzle-kit check:pg",
    "db:up": "bunx drizzle-kit up:pg",
    "db:migrate": "bun run ./scripts/migrate.ts",
    "db:studio": "bunx drizzle-kit studio",
    "db:seed": "bun run ./scripts/seed.ts",
    "prisma:generate": "bunx prisma generate",
    "prisma:studio": "bunx prisma studio",
    "prisma:migrate": "bunx prisma migrate dev",
    "prisma:migrate:deploy": "bunx prisma migrate deploy",
    "prisma:migrate:reset": "bunx prisma migrate reset",
    "analyze": "ANALYZE=true bun run build",
    "analyze:server": "BUNDLE_ANALYZE=server bun run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser bun run build",
    "check:env": "bun run ./scripts/check-env.ts",
    "check:health": "bun run ./scripts/health-check.ts",
    "check:types": "bun run typecheck",
    "check:all": "bun run lint && bun run typecheck && bun run test",
    "clean": "rm -rf .next dist node_modules .turbo",
    "clean:cache": "rm -rf .next .turbo",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "pre-commit": "bun run lint:fix && bun run typecheck"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.51.0",
    "@tanstack/react-query-devtools": "^5.51.0",
    "@upstash/redis": "^1.27.0",
    "drizzle-orm": "^0.29.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.300.0",
    "react-hook-form": "^7.48.0",
    "@hookform/resolvers": "^3.3.4",
    "rudder-sdk-js": "^2.40.0",
    "sharp": "^0.33.0",
    "zod": "^3.22.0",
    "swr": "^2.2.0",
    "zustand": "^4.5.0",
    "immer": "^10.0.3",
    "isomorphic-dompurify": "^2.9.0",
    "@sentry/nextjs": "^7.99.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "@playwright/test": "^1.40.0",
    "@prisma/client": "^5.7.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/bun": "^1.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "drizzle-kit": "^0.20.0",
    "postgres": "^3.4.0",
    "prisma": "^5.7.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.8.0",
    "vitest": "^1.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "@vercel/analytics": "^1.1.0",
    "webpack-bundle-analyzer": "^4.10.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}