# Application
NODE_ENV=staging
NEXT_PUBLIC_APP_NAME="Boilerplate Staging"
NEXT_PUBLIC_APP_URL=https://staging.yourapp.com

# Database
DATABASE_URL=${STAGING_DATABASE_URL}

# Supabase (Staging Project)
NEXT_PUBLIC_SUPABASE_URL=${STAGING_SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${STAGING_SUPABASE_ANON_KEY}
SUPABASE_SERVICE_ROLE_KEY=${STAGING_SUPABASE_SERVICE_KEY}

# API Configuration
NEXT_PUBLIC_API_URL=https://staging.yourapp.com/api
API_TIMEOUT=30000

# Feature Flags
ENABLE_NEW_CHECKOUT=true
ENABLE_AI_ASSISTANT=true
ENABLE_ANALYTICS=true

# Security
NEXTAUTH_SECRET=${STAGING_NEXTAUTH_SECRET}
NEXTAUTH_URL=https://staging.yourapp.com

# External Services (Staging)
STRIPE_SECRET_KEY=${STAGING_STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STAGING_STRIPE_WEBHOOK_SECRET}

# Analytics (Staging)
NEXT_PUBLIC_RUDDERSTACK_KEY=${STAGING_RUDDERSTACK_KEY}
NEXT_PUBLIC_RUDDERSTACK_URL=${STAGING_RUDDERSTACK_URL}

# Development Tools
ENABLE_DEBUG_LOGS=true
ENABLE_SQL_LOGS=false
ENABLE_PERFORMANCE_LOGS=true

# Deployment
VERCEL_URL=${STAGING_VERCEL_URL}
VERCEL_ENV=preview
